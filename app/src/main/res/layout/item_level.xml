<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="?attr/colorSecondary"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Difficulty Icon -->
        <ImageView
            android:id="@+id/imgDifficulty"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Level Name -->
        <TextView
            android:id="@+id/tvLevelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="12dp"
            app:layout_constraintStart_toEndOf="@id/imgDifficulty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgDifficulty"/>

        <!-- Letters Count -->

        <!-- Debug Word / Optional Display -->
        <TextView
            android:id="@+id/tvLettersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingTop="4dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintStart_toEndOf="@id/imgDifficulty"
            app:layout_constraintTop_toBottomOf="@id/tvLevelName" />

        <TextView
            android:id="@+id/tvDebugWord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="12dp"
            app:layout_constraintStart_toEndOf="@id/imgDifficulty"
            app:layout_constraintTop_toBottomOf="@id/tvLettersCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imgDifficulty"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
